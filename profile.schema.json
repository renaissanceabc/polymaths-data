{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Polymath Profile",
  "type": "object",
  "required": ["name", "slug", "bio", "education", "tags"],
  "properties": {
    "name": { "type": "string" },
    "slug": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "bio": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["montessori", "homeschool"]
          },
          "notes": { "type": "string" }
        }
      }
    },
    "notableAchievements": {
      "type": "array",
      "items": { "type": "string" }
    },
    "links": {
      "type": "object",
      "properties": {
        "wikipedia": { "type": "string", "format": "uri" },
        "website": { "type": "string", "format": "uri" },
        "linkedin": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false
    },
    "image": { "type": "string" }
  },
  "additionalProperties": false
}